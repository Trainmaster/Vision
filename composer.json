{
  "name": "vision/vision",
  "description": "Vision - a PHP framework",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Frank Liepert",
      "email": "contact@frank-liepert.de",
      "role": "Developer"
    }
  ],
  "require": {
    "ext-fileinfo": "*",
    "ext-intl": "*",
    "ext-mbstring": "*",
    "php": "^7.2",
    "psr/container": "^1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "phan/phan": "^3",
    "phpunit/phpunit": "^8"
  },
  "autoload": {
    "psr-4": {
      "Vision\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "VisionTest\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
      "/.phan",
      "/docs",
      "/tests",
      "/.gitattributes",
      "/.gitignore",
      "/.travis.yml",
      "/phpcs.xml",
      "/phpunit.xml"
    ]
  }
}
